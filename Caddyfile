{
  email {$ACME_EMAIL}
}

{$DOMAIN} {
  encode gzip zstd

  # Proxy API requests to Flask backend
  handle_path /api* {
    reverse_proxy backend:5000
  }

  # Everything else goes to frontend (Nginx serving static build)
  handle {
    reverse_proxy frontend:80
  }

  tls {
    issuer acme
  }
}
